<%
HTML_TITLE = "webBox 5 | haftalık development haberleri!"
HTML_DESCRIPTION = "Her cuma (umuyoruz) 5 dakikada haftanın heyecan verici development haberleri. Python, Ruby, Php, JavaScript, Go, Objective-C, web dünyası, sunucular aklınıza ne gelirse!"
%>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= HTML_TITLE %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= partial "partials/meta", :locals => {:meta_keywords => "webbox5, development, developer, podcast, türkçe, istanbul, türkiye, 5 dakika, ruby, python, php, perl, c, objective-c", :meta_description => HTML_DESCRIPTION} %>
    <%= partial "partials/open_graph", :locals => { :html_title => HTML_TITLE, :html_description => HTML_DESCRIPTION } %>
    <%= partial "partials/icons" %>
    <%= partial "partials/html_shim" %>

    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800|PT+Serif:400,700&subset=latin,latin-ext">
    <%= stylesheet_link_tag 'application' %>
    <%= yield_content :css %>
  </head>
  <body>
    
    <div id="fb-root"></div>
    <%= yield %>

    <%= partial "partials/footer" %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <%= javascript_include_tag 'retina-0.0.2' %>
    <%= javascript_include_tag 'sharing' %>
    <%= javascript_include_tag 'app' %>
    <%= yield_content :javascript %>
    <%= partial "partials/google_analytics", :locals => {:analytics_id => "UA-52664816-1", :analytics_domain => "auto"} %>
  </body>
</html>
